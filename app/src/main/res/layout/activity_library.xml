<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryActivity"
    android:background="@drawable/fondo_principal">

    <FrameLayout
        android:id="@+id/optionsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:padding="16dp"

            android:background="@android:color/transparent"


            android:src="@drawable/baseline_arrow_back_24"
            android:visibility="visible"
            android:contentDescription="@string/icon_arrow_back"/>


    </FrameLayout>

    <ImageButton
        android:id="@+id/uno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tres"
        app:layout_constraintEnd_toStartOf="@+id/dos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:src="@drawable/libro_notas"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.38"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintVertical_bias="0.1"

        android:background="@drawable/rounded_button"
        android:contentDescription="@string/rounded_button_description"
        />
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        app:layout_constraintBottom_toTopOf="@+id/tres"
        app:layout_constraintEnd_toEndOf="@+id/uno"
        app:layout_constraintStart_toStartOf="@+id/uno"
        app:layout_constraintTop_toBottomOf="@+id/uno"
        app:layout_constraintVertical_bias="0.3" />
    <ImageButton
        android:id="@+id/dos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cuatro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/uno"
        app:layout_constraintTop_toTopOf="parent"

        android:src="@drawable/libro_notas"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.38"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintVertical_bias="0.1"

        android:background="@drawable/rounded_button"
        android:contentDescription="@string/rounded_button_description"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        app:layout_constraintBottom_toTopOf="@+id/cuatro"
        app:layout_constraintEnd_toEndOf="@+id/dos"
        app:layout_constraintStart_toStartOf="@+id/dos"
        app:layout_constraintTop_toBottomOf="@+id/dos"
        app:layout_constraintVertical_bias="0.3" />
    <ImageButton
        android:id="@+id/tres"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cuatro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uno"

        android:src="@drawable/libro_notas"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.38"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintVertical_bias="0.1"

        android:background="@drawable/rounded_button"
        android:contentDescription="@string/rounded_button_description"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tres"
        app:layout_constraintStart_toStartOf="@+id/tres"
        app:layout_constraintTop_toBottomOf="@+id/tres"
        app:layout_constraintVertical_bias="0.3" />
    <ImageButton
        android:id="@+id/cuatro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tres"
        app:layout_constraintTop_toBottomOf="@+id/dos"

        android:src="@drawable/libro_notas"
        android:scaleType="fitCenter"
        app:layout_constraintWidth_percent="0.38"
        app:layout_constraintHeight_percent="0.18"
        app:layout_constraintVertical_bias="0.1"

        android:background="@drawable/rounded_button"
        android:contentDescription="@string/rounded_button_description"
        />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cuatro"
        app:layout_constraintStart_toStartOf="@+id/cuatro"
        app:layout_constraintTop_toBottomOf="@+id/cuatro"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>